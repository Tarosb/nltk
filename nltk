import nltk
from nltk.sentiment import SentimentIntensityAnalyzer

# Laden des vorab trainierten Stimmungsanalyse-Modells
nltk.download('vader_lexicon')

def analyze_sentiment(text):
    sid = SentimentIntensityAnalyzer()
    sentiment_scores = sid.polarity_scores(text)

    # Bestimmung der Positivit채t, Negativit채t und Neutralit채t des Textes
    if sentiment_scores['compound'] >= 0.05:
        return 'Positiv'
    elif sentiment_scores['compound'] <= -0.05:
        return 'Negativ'
    else:
        return 'Neutral'

if __name__ == "__main__":
    text_to_analyze = input("Geben Sie den Text f체r die Stimmungsanalyse ein: ")

    sentiment_result = analyze_sentiment(text_to_analyze)

    print(f"Stimmung des Textes: {sentiment_result}")
